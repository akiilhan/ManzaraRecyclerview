<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp" app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgmanzara"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvmanzaraBaslik" app:layout_constraintStart_toEndOf="@+id/imgmanzara"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imgmanzara"
                android:textSize="17sp" app:layout_constraintEnd_toStartOf="@+id/btnekle"
                android:layout_marginEnd="8dp" android:layout_marginTop="2dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvmanzaraAciklama" app:layout_constraintStart_toEndOf="@+id/imgmanzara"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvmanzaraBaslik" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgmanzara"
                app:layout_constraintEnd_toStartOf="@+id/btnsil" android:layout_marginEnd="8dp"/>
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:background="@color/colorAccent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/imgmanzara"
              android:layout_marginTop="3dp">

        </View>
        <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnekle"
                android:background="@drawable/ic_make_copy"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="2dp"/>
        <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnsil"
                android:background="@drawable/ic_delete"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnekle"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>